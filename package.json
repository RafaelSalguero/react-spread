{
  "name": "react-spread",
  "version": "1.1.4",
  "description": "Spread props to children components",
  "main": "dist/commonjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "buildCommonJs": "tsc -p tsconfig-build.json -m commonjs -outDir dist/commonjs -d false",
    "buildES6": "tsc -p tsconfig-build.json -d -declarationDir dist/types",
    "build": "npm run buildES6 && npm run buildCommonJs",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "tsc": "tsc --noemit"
  },
  "author": "Rafael Salguero",
  "license": "MIT",
  "dependencies": {
    "react": ">=16"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.3",
    "@types/react": ">=16",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}